{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}